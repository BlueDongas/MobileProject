<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/TransparentProgressBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:progress="30"
            android:max="30"
            android:indeterminate="false"
            android:progressTint="#2196F3"
            android:backgroundTint="#CCCCCC"
            />

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="설명에 알맞은 영단어를 고르세요!"
        android:textSize="20sp"
        android:textColor="#3B1C32"
        android:gravity="center"
        android:layout_marginTop="50dp"/>

<!--    &lt;!&ndash; 타이머 텍스트 &ndash;&gt;-->
<!--    <TextView-->
<!--        android:id="@+id/timer_text"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="30s"-->
<!--        android:textSize="24sp"-->
<!--        android:textStyle="bold"-->
<!--        android:textColor="#FF0000"-->
<!--        android:gravity="center"-->
<!--        android:layout_marginBottom="16dp" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center">


        <!-- 문제를 표시할 텍스트 -->
        <TextView
            android:id="@+id/question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="질문이 여기에 표시됩니다."
            android:textSize="28sp"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:rowCount="2"
                android:columnCount="2"
                android:padding="16dp">

                <Button
                    android:id="@+id/selection1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:text="선택지 1"
                    style="@style/TransparentButton"
                    />
                <Button
                    android:id="@+id/selection2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:text="선택지 2"
                    style="@style/TransparentButton" />

                <Button
                    android:id="@+id/selection3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:text="선택지 3"
                    style="@style/TransparentButton" />

                <Button
                    android:id="@+id/selection4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:text="선택지 4"
                    style="@style/TransparentButton" />

            </GridLayout>

            <!-- 정답 확인 버튼 -->
            <Button
                android:id="@+id/check_answer_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="정답 확인"
                android:backgroundTint="#FFC107"
                android:textColor="#FFFFFF"
                android:layout_margin="8dp"
                android:enabled="false" />

        </LinearLayout>
        <!-- 하단 버튼 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- 이전 버튼 -->
            <Button
                android:id="@+id/prev_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="이전"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_margin="8dp" />

            <!-- 중단 버튼 -->
            <Button
                android:id="@+id/stop_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="중단"
                android:backgroundTint="#FF5722"
                android:textColor="#FFFFFF"
                android:layout_margin="8dp" />

            <!-- 다음 버튼 -->
            <Button
                android:id="@+id/next_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="다음"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_margin="8dp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
